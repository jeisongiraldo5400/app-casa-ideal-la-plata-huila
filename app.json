{
  "expo": {
    "name": "Casa Ideal La Plata Huila",
    "slug": "app-casa-ideal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logos/icono.png",
    "scheme": "appcasaideal",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logos/logo_completo.png",
      "resizeMode": "contain",
      "backgroundColor": "#1e3a8a",
      "imageWidth": 300,
      "dark": {
        "image": "./assets/logos/logo_completo.png",
        "backgroundColor": "#1e3a8a"
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.casaideal.laplatahuila"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1e3a8a",
        "foregroundImage": "./assets/logos/icono.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.casaideal.laplatahuila"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/logos/icono.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/logos/logo_completo.png",
          "imageWidth": 300,
          "resizeMode": "contain",
          "backgroundColor": "#1e3a8a",
          "hideAsyncOnLaunch": false,
          "dark": {
            "backgroundColor": "#1e3a8a"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir acceso a la cámara para escanear códigos de barras."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
