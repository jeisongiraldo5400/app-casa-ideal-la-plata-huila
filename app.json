{
  "expo": {
    "name": "Casa Ideal La Plata Huila",
    "slug": "app-casa-ideal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logos/icono.png",
    "scheme": "appcasaideal",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1e3a8a",
        "foregroundImage": "./assets/logos/icono.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/logos/icono.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/logos/icono.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1e3a8a",
          "dark": {
            "backgroundColor": "#1e3a8a"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir acceso a la cámara para escanear códigos de barras."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
